<%- include('includes/header') %>

  <!-- ======= Contact Section ======= -->
  <section id="contact" class="contact">
    <div class="container">

      <div class="section-title">
        <h2>Contact</h2>
        <p>Thank you taking time to view my portfolio. Below are my contact details, should you with to get hold of me do not hesitate. Also i have a cotact form below that can be utilised to message or contact me.</p>
      </div>

      <div class="row" data-aos="fade-in">

        <div class="col-lg-5 d-flex align-items-stretch">
          <div class="info">
            <div class="address">
              <i class="icofont-google-map"></i>
              <h4>Location:</h4>
              <p>274 West Street, Centurion, South Africa</p>
            </div>

            <div class="email">
              <i class="icofont-envelope"></i>
              <h4>Email:</h4>
              <p>ramohlalen@gmail.com</p>
            </div>

            <div class="phone">
              <i class="icofont-phone"></i>
              <h4>Call:</h4>
              <p>+27 82 358 0160</p>
            </div>

          </div>

        </div>

        <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
          <form action="/contact" method="POST" id="my-form" autocomplete="off" class="email-form">
          
            <div class="form-group">
              <label for="firstName"> First Name</label>
              <input type="text" id="firstName" name="firstName">
            </div>
          
            <div class="form-group">
              <label for="latsName">Last Name</label>
              <input type="text" id="lastName" name="lastName">
            </div>
          
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email">
            </div>
          
            <div class="form-group">
              <label for="subject">Subject</label>
              <input type="subject" id="subject" name="subject">
            </div>
          
            <div class="form-group">
              <label for="message">Message</label>
              <textarea name="message" id="message" cols="30" rows="10"></textarea>
            </div>
          
            <button type="submit">Submit</button>
          </form>
        </div>

      </div>

    </div>
  </section>
  <!-- End Contact Section -->

  <%- include('includes/footer') %>